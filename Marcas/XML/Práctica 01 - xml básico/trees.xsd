<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <!-- SIMPLE TYPES -->
  <!-- Generales -->
  <xs:element name="nombre_cientifico" type="xs:string" />
  <xs:element name="nombre_comun" type="xs:string" />
  <xs:element name="vegetacion">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:enumeration value="caducifolio" />
        <xs:enumeration value="perenne" />
        <!-- <xs:pattern value="[cC]aducifolio|[pP]erenne"></xs:pattern> -->
      </xs:restriction>
    </xs:simpleType>
  </xs:element>

  <!-- Altura-->
  <xs:element name="altura_max" type="xs:int" />
  <xs:element name="altura_min" type="xs:int" />
  <xs:element name="altura_aprox" type="xs:int" />

  <!-- Forma -->
  <xs:element name="copa" type="xs:string" />
  <xs:element name="tronco" type="xs:string" />
  <xs:element name="ramaje" type="xs:string" />

  <!-- Color -->
  <xs:element name="estacion">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:enumeration value="primavera" />
        <xs:enumeration value="verano" />
        <xs:enumeration value="otoÃ±o" />
        <xs:enumeration value="invierno" />
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
  <xs:element name="color_hoja" type="xs:string" />
  <xs:element name="hoja_joven" type="xs:string" />
  <xs:element name="hoja_enves" type="xs:string" />
  <xs:element name="hoja_haz" type="xs:string" />

  <!-- Heladas -->
  <xs:element name="tipo_helada" type="xs:string" />
  <xs:element name="temperatura_helada" type="xs:int" />


  <!-- COMPLEX TYPES -->
  <xs:element name="altura">
    <xs:complexType>
      <xs:all>
        <xs:element ref="altura_max" minOccurs="0" />
        <xs:element ref="altura_min" minOccurs="0" />
        <xs:element ref="altura_aprox" minOccurs="0" />
      </xs:all>
    </xs:complexType>
  </xs:element>

  <xs:element name="forma_estructura">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="copa" />
        <xs:element ref="tronco" />
        <xs:element ref="ramaje" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="color">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="estacion" />
        <xs:element ref="color_hoja" minOccurs="0" />
        <xs:element ref="hoja_joven" minOccurs="0" />
        <xs:element ref="hoja_haz" minOccurs="0" />
        <xs:element ref="hoja_enves" minOccurs="0" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="resistencia_heladas">
    <xs:complexType>
      <xs:all>
        <xs:element ref="tipo_helada" />
        <xs:element ref="temperatura_helada" />
      </xs:all>
    </xs:complexType>
  </xs:element>

  <xs:element name="arbol">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="nombre_cientifico" />
        <xs:element ref="nombre_comun" maxOccurs="unbounded" />
        <xs:element ref="vegetacion" />
        <xs:element ref="altura" />
        <xs:element ref="forma_estructura" />
        <xs:element ref="color" maxOccurs="unbounded" />
        <xs:element ref="resistencia_heladas" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>

  <xs:element name="arboles">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="arbol" maxOccurs="unbounded" />
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>