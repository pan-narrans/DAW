  <arbol>
    <nombre_cientifico>Acer monspessulanum</nombre_cientifico>
    <nombre_comun>Arce de Montpellier</nombre_comun>
    <nombre_comun>Arce menor</nombre_comun>
    <vegetacion>caducifolio</vegetacion>
    <altura>
      <altura_min>6</altura_min>
      <altura_max>10</altura_max>
    </altura>
    <forma_estructura>
      <copa>esférica</copa>
      <tronco>recto con bifurcaciones</tronco>
      <ramaje>colgante</ramaje>
    </forma_estructura>
    <color>
      <estacion>primavera</estacion>
      <hoja_haz>verde brillante</hoja_haz>
      <hoja_enves>verde blanquecino</hoja_enves>
    </color>
    <resistencia_heladas>
      <tipo_helada>fuerte</tipo_helada>
      <temperatura_helada>-20</temperatura_helada>
    </resistencia_heladas>
  </arbol>

  <arbol>
