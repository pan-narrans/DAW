    <vegetacion>perenne</vegetacion>
    <altura>
      <altura_aprox>25</altura_aprox>
    </altura>
    <forma_estructura>
      <copa>esférica o elíptica irregular</copa>
      <tronco>recto</tronco>
      <ramaje>tortuoso</ramaje>
    </forma_estructura>
    <color>
      <estacion>primavera</estacion>
      <hoja_joven>plateado</hoja_joven>
      <hoja_haz>verde oscuro</hoja_haz>
      <hoja_enves>plateado</hoja_enves>
    </color>
