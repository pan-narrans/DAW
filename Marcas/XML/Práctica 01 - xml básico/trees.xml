    <altura>
      <altura_min>20</altura_min>
      <altura_max>25</altura_max>
    </altura>
    <forma_estructura>
      <copa>ovoidal</copa>
      <tronco>recto</tronco>
      <ramaje>expandido</ramaje>
    </forma_estructura>
    <color>
      <estacion>primavera</estacion>
      <hoja_haz>verde medio</hoja_haz>
      <hoja_enves>verde claro</hoja_enves>
    </color>
